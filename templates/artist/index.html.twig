{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
                <h1>Liste des {{ resource }}</h1>

                <table>
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for artist in artists %}    
                        <tr>
                            <th>{{ artist.firstname }}</th>
                            <th>{{ artist.lastname }}</th>
                        </tr>
                    {% endfor %}    
                    </tbody>
                </table>
{% endblock %}
